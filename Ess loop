  for i in range(numero, -1, -1):  # L'intervallo parte dal numero inserito e va fino a 0
    print(i)
  y=input("vuoi ripetere? si o no")
  if y.equal("si"):
     x.add(2)
  else:
     x = ()

      




def e_primo(n):
    if n <= 1:
        return False
    for i in range(2, int(n ** 0.5) + 1):
        if n % i == 0:
            return False
    return True

numero = int(input("Inserisci un numero per verificare se è primo: "))

if e_primo(numero):
    print("Il numero è primo.")
else:
    print("Il numero non è primo.")
